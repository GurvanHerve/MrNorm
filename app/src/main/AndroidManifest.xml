<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.navrug.mrnorm"
    android:installLocation="preferExternal">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".tests.TestActivity"
        android:screenOrientation="portrait"
        android:configChanges="keyboard|keyboardHidden|orientation">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".tests.BitmapTest"/>
    <activity android:name=".tests.AccelerometerTest"/>
    <activity android:name=".tests.AssetsTest"/>
    <activity android:name=".tests.ExternalStorageTest"/>
    <activity android:name=".tests.FontTest"/>
    <activity android:name=".tests.FullScreenTest"/>
    <activity android:name=".tests.KeyTest"/>
    <activity android:name=".tests.LifeCycleTest"/>
    <activity android:name=".tests.MediaPlayerTest"/>
    <activity android:name=".tests.MultiTouchTest"/>
    <activity android:name=".tests.RenderViewTest"/>
    <activity android:name=".tests.ShapeTest"/>
    <activity android:name=".tests.SingleTouchTest"/>
    <activity android:name=".tests.SoundPoolTest"/>
    <activity android:name=".tests.SurfaceViewTest"/>

  </application>

</manifest>
