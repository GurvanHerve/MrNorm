<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.navrug.game"
    android:installLocation="preferExternal">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name="com.navrug.game.mrnorm.MrNorm"
        android:screenOrientation="portrait"
        android:configChanges="keyboard|keyboardHidden|orientation">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.navrug.game.tests.BitmapTest"/>
    <activity android:name="com.navrug.game.tests.AccelerometerTest"/>
    <activity android:name="com.navrug.game.tests.AssetsTest"/>
    <activity android:name="com.navrug.game.tests.ExternalStorageTest"/>
    <activity android:name="com.navrug.game.tests.FontTest"/>
    <activity android:name="com.navrug.game.tests.FullScreenTest"/>
    <activity android:name="com.navrug.game.tests.KeyTest"/>
    <activity android:name="com.navrug.game.tests.LifeCycleTest"/>
    <activity android:name="com.navrug.game.tests.MediaPlayerTest"/>
    <activity android:name="com.navrug.game.tests.MultiTouchTest"/>
    <activity android:name="com.navrug.game.tests.RenderViewTest"/>
    <activity android:name="com.navrug.game.tests.ShapeTest"/>
    <activity android:name="com.navrug.game.tests.SingleTouchTest"/>
    <activity android:name="com.navrug.game.tests.SoundPoolTest"/>
    <activity android:name="com.navrug.game.tests.SurfaceViewTest"/>

  </application>

</manifest>
